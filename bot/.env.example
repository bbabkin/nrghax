# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here_for_dev

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
# IMPORTANT: New secret key format (REQUIRED - Legacy keys are disabled)
SUPABASE_SECRET_KEY=your_supabase_secret_key_here
# Legacy service role key (DEPRECATED - may not work)
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Bot Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Admin Configuration (comma-separated Discord user IDs)
ADMIN_USER_IDS=user_id_1,user_id_2

# Sync Configuration
ROLE_SYNC_INTERVAL_MINUTES=30
CACHE_TTL_SECONDS=300

# Platform Configuration
ENABLE_DISCORD=true
ENABLE_SLACK=false

# Slack Configuration (only needed if ENABLE_SLACK=true)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Brand Configuration
BRAND_COLOR=#fb0
FOOTER_TEXT=NRGhax Bot

# Web App Configuration
WEB_APP_URL=https://nrghax.com
